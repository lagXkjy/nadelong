<!--newaddress.wxml-->
<form  bindsubmit="formSubmit">
  <view class="outer bg-fff flex">
    <view class="outer-left sanGe">
      收货人：
    </view>
    <input name="name" class="sanGeI"  />
  </view>

   <view class="outer bg-fff flex">
    <view class="outer-left sanGe">
      手机号：
    </view>
    <input name="phone"  type="number" class="sanGeI"  />
  </view>

      <view  class="outer bg-fff flex">

      <picker class='picker' bindchange="bindTimeChange" mode="region" >
            <view class='flex Seal'>
                  <view class="outer-left "> 
                  所在地区：{{DetailedAddress}}
                  </view>
            </view>
      </picker>
 <image class="img" mode="wdithFix" src="../../../images/left-to_03.png"></image>
      </view>  
   

   <view class="outer bg-fff flex">
    <view class="outer-left siGe">
      详细地址：
    </view>
    <input name="address"  class="sanGeI"  />
  </view>
  <button form-type='submit'  class="fff Red-wine">保存</button>
</form>
